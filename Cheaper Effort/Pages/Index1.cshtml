@page
@model Cheaper_Effort.Pages.Index1Model
@{
    ViewData["Title"] = "Sales";
}
@section Scripts {
    <script type="text/javascript" src="~/scripts/main.js"></script>
}

<script src="~/Scripts/scripts.js"></script>

<head>
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css" />
        <script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"></script>
</head>

<div class="about">
    <div class="row" style="padding-top: 50px">
        <div class="col-md-6" style="padding-left: 40px">

            <h5 class="main-line-without-padding">
                Search your location!
            </h5>

            <label>
                @Html.Label("Adress-search-box")
            </label>

            <h5 class="main-line-without-padding">
                Choose a store you wish to check:
            </h5>
            
            <br />

            <label>
                @Html.CheckBox("isIki", false)
                Iki
            </label>

            <br />

            <label>
                @Html.CheckBox("isRimi", false)
                Rimi
            </label>

            <br />

            <label>
                @Html.CheckBox("isMaxima", false)
                Maxima
            </label>

        </div>

        <div class="col-md-6" style="padding-right: 40px">

                <style>
                    #map {
                        height: 350px;
                        width: 100%;
                    }

                </style>

                <div id="map"></div>

                <script>

                    var map = L.map('map').setView([54.72962, 25.2635], 16);

                    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        maxZoom: 19,
                        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
                    }).addTo(map);

                    var image = L.imageOverlay('aMap.PNG', bounds).addTo(map);

                    map.fitBounds(bounds);

                </script>

        </div>
        
    </div>

    <h5 class="main-line">
        Current Available Sales:
    </h5>

    <div> @*sale printing place*@
        <div class="sale-product"> @*one product place*@
            <h5 class="main-line-without-padding">Product title</h5>
            <p>Old price || New price</p>
            <p>PICTURE, IF GIVEN</p>
        </div>
    </div>

</div>