@page
@model Cheaper_Effort.Pages.Forms.IngredientModel
@{
    ViewData["Title"] = "Products";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Ingredients" class="form-label">Ingredients</label>
        <br />
        <select id="ddlIngredients" name="IngredientIds" asp-items="@Model.Ingredients" multiple="multiple" style="width:1296px">
        </select>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js">
        </script>
        <script type="text/javascript">
            $(function () {
                $("#ddlIngredients").select2();
            });
        </script>
    </div>
    <br>
    <button class="wt-20 col-12 btn btn-primary btn-lg">Submit</button>

</form>