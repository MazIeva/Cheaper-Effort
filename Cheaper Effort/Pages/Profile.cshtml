@page
@model Cheaper_Effort.Pages.ProfileModel
@{
}

<div class="mt-5 about">
    <h4 class="headline-text">Profile</h4>
    <div class="container">
        <table>
            <tr>
                <th class="col1" height="100px" width="70%">
                    <div class="container" height="100px" width="400px">
                        <div class="row border rounded shadow-sm">

                                <div style="float: left; width: 100px; height: 100px">
                                    @if (!String.IsNullOrEmpty(Convert.ToBase64String(Model.Account.Picture)))
                                    {
                                        <img style="width: 100px; height: 100px; border: 2px solid black" src="data:image/jpg;base64,@Convert.ToBase64String(Model.Account.Picture)" />
                                    }
                                    else
                                    {
                                        <img style="width: 100px; height: 100px; border: 2px solid black" src="/Pictures/pfp.jpg" />
                                    }
                                </div>

                            @*<div class="row justify-content-left align-items-left">*@

                                @*<div class="row text-sm-left">*@

                                <div style="float:left; width:700px">

                                    <div class="mb-2">Profile Data:</div>

                                    <div style="float: left; width: 300px">
                                        User Name:  @Html.DisplayFor(model => model.Account.Username)
                                    </div>

                                    <div style="float: left; width: 300px; margin-left: 20px">
                                        First Name: @Html.DisplayFor(model => model.Account.FirstName)
                                    </div>

                                    <div style="float: left; width: 300px" ">
                                        Last Name: @Html.DisplayFor(model => model.Account.LastName)
                                    </div>

                                    <div style="float: left; width: 300px; margin-left: 20p">
                                        Email: @Html.DisplayFor(model => model.Account.Email)
                                    </div>

                                </div>

                            
                            @*</div>*@
                        </div>
                    </div>
                </th>

                <th class="col2" height="100px" width="30%">
                    <div class="container" height="200pt" width="100px">
                        <div class="row border rounded shadow-sm">
                            <div class="mb-2">Collected points:</div>
                            <div class="row justify-content-right align-items-Right">
                                <br />
                                <div class="col-sm-6">
                                    <br/>
                                    <br />
                                </div>
                            </div>
                         </div>
                    </div>
                </th>
            </tr>
        </table>
        <div class="container">
            <div class="row border rounded shadow-sm">
                <div class="mb-2">Saved Recipes:</div>
                <div class="row justify-content-right align-items-Right">
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>